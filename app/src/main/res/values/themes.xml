<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.InstaKotlin" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:statusBarColor">#f0f0f0</item>
        <item name="android:windowLightStatusBar">true</item>


    </style>


    <style name="Theme.InstaKotlin" parent="Base.Theme.InstaKotlin" />

    <style name="ProfileTvStatistics">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ProfileTvStatisticsNumber">

    </style>

    <style name="ProfileTvUserInformation">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textColor">@color/siyah</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="canopy">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">@color/golgelik</item>
    </style>

    <style name="TvEditProfile">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:background">@drawable/edit_profile_button_background</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:padding">6dp</item>
        <item name="android:text">@string/edit_profile</item>
        <item name="android:textColor">@color/siyah</item>
    </style>

    <style name="Icon">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="TVSettings">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:text">@string/settings</item>
        <item name="android:textColor">@color/siyah</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TVAccountSettingsTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:text">@string/account_settings</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/siyah</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TVAccountSettings">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:textColor">@color/siyah</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="BottomNavigationMenu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">75dp</item>
        <item name="android:background">@color/beyaz</item>
        <item name="itemActiveIndicatorStyle">@color/beyaz</item>
        <item name="itemIconTint">@drawable/menu_custom</item>
        <item name="itemTextColor">@drawable/menu_custom</item>
        <item name="labelVisibilityMode">unlabeled</item>
        <item name="menu">@menu/bottom_navigatin_menu</item>
    </style>

    <style name="ButtonNext">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:background">@drawable/register_button</item>
        <item name="android:enabled">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/mavi</item>
        <item name="android:text">@string/next</item>
    </style>

    <style name="EtInput">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:background">@drawable/register_edit_text</item>
        <item name="android:ems">10</item>
        <item name="android:padding">14dp</item>
    </style>

    <style name="TVInputMethod">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:textColor">@color/siyah</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="viewLong">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <style name="viewChoice">
        <item name="android:layout_width">180dp</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">@color/siyah</item>
    </style>

    <style name="TVPhoneNumberInfo">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:text">@string/phone_number_info</item>
        <item name="android:textSize">14sp</item>"
    </style>

    <style name="TVSignIn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginEnd">70dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:text">@string/sign_in</item>
    </style>

    <style name="TVChangeProfileFoto">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:text">@string/change_profile_picture</item>
        <item name="android:textColor">@color/mavi</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="EditProfileTV">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TVEditProfileET">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:textSize">18sp</item>
    </style>
</resources>